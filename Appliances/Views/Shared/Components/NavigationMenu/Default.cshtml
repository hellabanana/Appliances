@model IEnumerable<string>


<a class="btn btn-block btn-secondary" asp-action="Index" asp-controller="Home" asp-route-category="">Всё</a>
@foreach (string category in Model)
{

    <a class="btn btn-block btn-secondary @(category==ViewBag.SelectedCategory? "btn-primary":"btn-secondary")"
       asp-action="Index" asp-controller="Home" asp-route-category="@category" asp-route-productPage="1">@category</a>
}

