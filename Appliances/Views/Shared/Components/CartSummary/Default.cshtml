@model Cart
    <div>
        <a class="nav-link text-dark"
           asp-controller="Cart" asp-action="Index" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
            Cart
            @if (Model.Lines.Count() > 0)
            {

            <span>:
                @Model.Lines.Sum(x => x.Quantity) item(s)
                @Model.ComputeTotalValue().ToString("c")
            </span>
               
            }
        </a>
       

    </div>

