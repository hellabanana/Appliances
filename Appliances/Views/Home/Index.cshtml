@model ProductListViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <div class="container">
        <div class=" row">
            <div class="col-md-2">
                @await Component.InvokeAsync("NavigationMenu")
            </div>
            <div class="col-md-10">
                @foreach (var k in Model.Products)
                {

                    @await Html.PartialAsync("ProductSummary", k)
                    <br />
                }
            </div>
        </div>
    </div>
</div>
<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-secondary" page-class-selected="btn-primary" class="btn-group pull-right m-1"> </div>


